<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.knight.progressbar.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="HorizontalProgressBar"
        android:textColor="@color/colorAccent" />

    <com.knight.progressbar.HorizontalProgressBar
        android:id="@+id/horizontalProgress"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginTop="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VerticalProgressBar"
        android:layout_marginTop="120dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorAccent" />

    <com.knight.progressbar.VerticalProgressBar
        android:id="@+id/verticalProgress"
        android:layout_width="24dp"
        android:layout_height="256dp"
        android:layout_centerInParent="true" />

</RelativeLayout>
